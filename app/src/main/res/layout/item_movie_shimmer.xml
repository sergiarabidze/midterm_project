<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corners">

    <View
        android:id="@+id/poster_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_200"
        android:alpha="0.8"/>

    <View
        android:id="@+id/title_placeholder"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:background="@color/gray_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/genre_placeholder"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:background="@color/gray_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_placeholder"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/release_placeholder"
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:background="@color/gray_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genre_placeholder"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/duration_placeholder"
        android:layout_width="70dp"
        android:layout_height="12dp"
        android:background="@color/gray_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/rating_placeholder"
        android:layout_width="30dp"
        android:layout_height="12dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/star_placeholder"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toStartOf="@id/rating_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="6dp"/>

    <View
        android:id="@+id/play_placeholder"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@color/gray_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>