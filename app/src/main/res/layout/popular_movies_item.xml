<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_corners">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/poster_id"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        tools:src="@color/black"
        app:shapeAppearanceOverlay="@style/poster"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        tools:text = "rima"
        android:fontFamily="@font/fira_bold"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genre_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_id"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/fira_light"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="drama,comedy"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/release_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genre_id"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/fira_light"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="agvistoshi"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/fira_light"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="agvistoshi"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="12sp"
        tools:text="4.3"
        android:textColor="@color/white"
        android:fontFamily="@font/fira_bold"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star_id"
        app:layout_constraintEnd_toStartOf="@id/rating_text"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/star"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="6dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/play_icon"
        android:layout_margin="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>