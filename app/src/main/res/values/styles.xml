<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundImageShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>
    <style name="poster" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="android:progressTint">@color/star_color</item>
        <item name="android:progressBackgroundTint">@color/lightless_star</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/auth_color</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>

        <item name="boxStrokeWidth">2dp</item>

        <item name="boxStrokeColor">@color/textinput_border_color</item>
        <item name="boxStrokeErrorColor">@color/auth_border</item>
    </style>




</resources>